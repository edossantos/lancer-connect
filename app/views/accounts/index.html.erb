<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
  <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><%= fa_icon "plus"%> Create Post</a>
</div>
<div class="row">
  <div class="col-lg-6">
    <% @posts.each do |post| %>
    <div class="col-12">
      <div class="card shadow mb-4 dashboard-posts">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary"><%= post.title %></h6>
          <div class="action-Buttons">
            <div class="small">
                <span class="like-action like-<%= post.id %> <%= 'active' if post_liked_by_user?(post.id) %>" data-id="<%= post.id %> ">
                    <%= fa_icon "heart", class: "like-button"%>
                    <%= fa_icon "heart-o", class: "unlike-button"%>
                    <span id="post-<%= post.id %>-likes">
                      <% if post.total_like_count > 1 %>
                          <%= post.total_like_count %> Likes
                        <% else %>
                          <%= post.total_like_count %> Like
                      <% end %>
                    </span>
                  </span>
                <!-- <span class="mr-2">#fa_icon "comment" 0 Comments</span> -->
            </div>
          </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <p class="post-description"><%= post.description %></p>
          <p class="text-muted mt-4 mb-0"><%= time_ago_in_words post.created_at %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-lg-6">
    RIGHT SIDE BAR
  </div>
</div>
