<%= form_for @post, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.submit "Save post", class: "btn btn-success"%>
  </div>
<% end %>
